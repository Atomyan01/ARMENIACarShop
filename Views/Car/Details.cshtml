</div>

<dl class="row">
	@if (ViewBag.Reviews != null && ((List<ReviewModel>)ViewBag.Reviews).Any())
	{
		@foreach (ReviewModel review in (List<ReviewModel>)(ViewBag.Reviews))
		{
			<dt class="col-sm-10">@review.Buyer.Email</dt>

			<dt class="col-sm-10">@review.Content</dt>
			<dd class="col-sm-2">@review.Stars</dd>

			<dd class="col-sm-10">@review.Description</dd>
		}
	}
</dl>